<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#1e1d1d"
    tools:context=".MainActivity">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:id="@+id/centerHorizontalline"
        >

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:id="@+id/centerVerticalline"
        >

    </RelativeLayout>

    //  male and feamle code for the main activity

       <RelativeLayout
           android:layout_width="150dp"
           android:layout_height="150dp"
           android:layout_toStartOf="@+id/centerVerticalline"
           android:background="@drawable/malefemalnotfocus"
           android:layout_above="@+id/heightlayout"
           android:layout_marginBottom="25dp"
           android:layout_marginLeft="20dp"
           android:layout_marginRight="20dp"
           android:id="@+id/male"
           android:layout_toLeftOf="@+id/centerVerticalline">

           <ImageView
               android:layout_width="170px"
               android:layout_height="170px"
               android:layout_above="@+id/textmale"
               android:layout_marginBottom="20dp"
               android:src="@drawable/male"
               android:layout_centerInParent="true"
               >

           </ImageView>

           <TextView
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:textSize="18sp"
               android:textStyle="bold"
               android:textColor="@color/white"
               android:id="@+id/textmale"
               android:text="male"
               android:layout_marginBottom="10dp"
               android:layout_alignParentBottom="true"
               android:textAlignment="center"
               android:gravity="center_horizontal">

           </TextView>

       </RelativeLayout>


    <RelativeLayout
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_toEndOf="@+id/centerVerticalline"
        android:background="@drawable/malefemalnotfocus"
        android:layout_above="@+id/heightlayout"
        android:layout_marginBottom="25dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:id="@+id/female"
        android:layout_toRightOf="@+id/centerVerticalline">

        <ImageView
            android:layout_width="170px"
            android:layout_height="170px"
            android:layout_above="@+id/textfemale"
            android:layout_marginBottom="20dp"
            android:src="@drawable/female"
            android:layout_centerInParent="true"
            >

        </ImageView>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:id="@+id/textfemale"
            android:text="female"
            android:layout_marginBottom="10dp"
            android:layout_alignParentBottom="true"
            android:textAlignment="center"
            android:gravity="center_horizontal">

        </TextView>

    </RelativeLayout>




    <RelativeLayout
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_toStartOf="@+id/centerVerticalline"
        android:layout_below="@+id/heightlayout"
        android:layout_marginBottom="20dp"
        android:layout_marginTop="35dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:id="@+id/weight"
        android:background="@drawable/backgroundheight"
        android:layout_toLeftOf="@+id/centerVerticalline">


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:text="weight"
            android:id="@+id/textweight"
            android:textAlignment="center"
            android:gravity="center_horizontal"
            android:textSize="18sp"
            android:layout_marginTop="15dp"
            >

        </TextView>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
             android:id="@+id/currentweight"
            android:textStyle="bold"
            android:textAlignment="center"
            android:text="55"
            android:gravity="center_horizontal"
            android:textSize="30sp"
            android:textColor="@color/white"
            android:layout_centerInParent="true"


            >

        </TextView>


        //we can give + - sign to increase or decrease the weight
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="20dp"
            android:background="@drawable/pluseminus"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="20dp" >

            <ImageView
                android:id="@+id/dercementweight"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/neagative_sign"

                >

            </ImageView>

        </RelativeLayout>




        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="20dp"
            android:layout_alignParentEnd="true"
            android:background="@drawable/pluseminus"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="20dp"
            android:layout_alignParentRight="true">

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/pluse_sign"
                android:id="@+id/inccementweight"

                >

            </ImageView>

        </RelativeLayout>













    </RelativeLayout>



    <RelativeLayout
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_toEndOf ="@+id/centerVerticalline"
        android:layout_below="@+id/heightlayout"
        android:layout_marginBottom="20dp"
        android:layout_marginTop="35dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:id="@+id/Age"
        android:background="@drawable/backgroundheight"
        android:layout_toLeftOf="@+id/centerVerticalline"
        android:layout_toRightOf="@+id/centerVerticalline">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:text="Age"
            android:id="@+id/textAge"
            android:textAlignment="center"
            android:gravity="center_horizontal"
            android:textSize="18sp"
            android:layout_marginTop="15dp"
            >

        </TextView>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/currentAge"
            android:textStyle="bold"
            android:textAlignment="center"
            android:text="23"
            android:gravity="center_horizontal"
            android:textSize="30sp"
            android:textColor="@color/white"
            android:layout_centerInParent="true"


            >

        </TextView>


        //we can give + - sign to increase or decrease the weight
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="20dp"
            android:background="@drawable/pluseminus"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="20dp" >

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/neagative_sign"
                android:id="@+id/dercementAge"

                >

            </ImageView>

        </RelativeLayout>


     // we can use the increament age

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="20dp"
            android:layout_alignParentEnd="true"
            android:background="@drawable/pluseminus"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="20dp"
            android:layout_alignParentRight="true">

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/pluse_sign"
                android:id="@+id/inccementAge"

                >

            </ImageView>

        </RelativeLayout>













    </RelativeLayout>/





























    // layout for the height
      <RelativeLayout
         android:layout_width="350dp"
         android:layout_height="150dp"
         android:layout_above="@id/centerHorizontalline"
         android:layout_marginBottom="50dp"
         android:layout_marginLeft="25dp"
         android:layout_marginRight="25dp"
         android:layout_centerHorizontal="true"
         android:id="@+id/heightlayout"
          android:background="@drawable/backgroundheight">


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:text="Height"
        android:textSize="20sp"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:layout_marginTop="15dp"
        android:gravity="center_horizontal">

    </TextView>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="40sp"
        android:layout_marginBottom="50dp"
        android:text="170"
        android:layout_centerInParent="true"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:id="@+id/currentheight">

    </TextView>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="cm"
        android:textSize="20sp"
        android:textColor="@color/white"
        android:layout_centerInParent="true"
        android:layout_toEndOf="@+id/currentheight"
        android:layout_marginStart="20dp"
        android:layout_marginLeft="20dp"
        android:layout_toRightOf="@+id/currentheight">
    </TextView>




     //seekbar are use for progress bar
    <SeekBar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
          android:layout_alignParentBottom="true"
        android:layout_marginBottom="20dp"
        android:layout_marginLeft="10dp"
        android:progressTint="@color/purple_700"
        android:layout_marginRight="10dp"
        android:id="@+id/SeekBarforheight"
        >
    </SeekBar>

      </RelativeLayout>



    <android.widget.Button
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:id="@+id/calculatebmi"
        android:layout_alignParentBottom="true"
        android:textSize="15sp"
        android:layout_marginBottom="15dp"
        android:text="know your BMI"
        android:textColor="@color/white"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:background="@drawable/buttonbackground"
        android:textStyle="bold">

    </android.widget.Button>











</RelativeLayout>